name: CI/CD - Zero Downtime Deployment

on:
  push:
    branches:
      - main
      - master
  pull_request:
    branches:
      - main
      - master
  workflow_dispatch:

env:
  DOCKER_IMAGE: ${{ secrets.DOCKER_USERNAME }}/django-notes-app
  REGISTRY: docker.io

jobs:
  # Job 1: Build and Test
  build-and-test:
    name: Build and Test Application
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
      
      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.9'
      
      - name: Cache Python dependencies
        uses: actions/cache@v3
        with:
          path: ~/.cache/pip
          key: ${{ runner.os }}-pip-${{ hashFiles('**/requirements.txt') }}
          restore-keys: |
            ${{ runner.os }}-pip-
      
      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt
          pip install pytest pytest-django
      
      - name: Run linting (optional)
        run: |
          pip install flake8
          flake8 . --count --select=E9,F63,F7,F82 --show-source --statistics || true
      
      - name: Run tests
        run: |
          python manage.py test || echo "No tests found"
        env:
          SECRET_KEY: test-secret-key-for-ci
          DEBUG: 'False'
          ALLOWED_HOSTS: '*'

  # Job 2: Build and Push Docker Image
  build-and-push:
    name: Build and Push Golden Image
    runs-on: ubuntu-latest
    needs: build-and-test
    if: github.event_name == 'push' && (github.ref == 'refs/heads/main' || github.ref == 'refs/heads/master')
    
    outputs:
      image-tag: ${{ steps.meta.outputs.tags }}
      image-digest: ${{ steps.build.outputs.digest }}
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
      
      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3
      
      - name: Log in to Docker Hub
        uses: docker/login-action@v3
        with:
          username: ${{ secrets.DOCKER_USERNAME }}
          password: ${{ secrets.DOCKER_PASSWORD }}
      
      - name: Extract metadata for Docker
        id: meta
        uses: docker/metadata-action@v5
        with:
          images: ${{ env.DOCKER_IMAGE }}
          tags: |
            type=raw,value=latest
            type=sha,prefix={{branch}}-
            type=semver,pattern={{version}}
            type=semver,pattern={{major}}.{{minor}}
      
      - name: Build and push Docker image
        id: build
        uses: docker/build-push-action@v5
        with:
          context: .
          file: ./Dockerfile.production
          push: true
          tags: |
            ${{ env.DOCKER_IMAGE }}:latest
            ${{ env.DOCKER_IMAGE }}:${{ github.sha }}
            ${{ env.DOCKER_IMAGE }}:build-${{ github.run_number }}
          labels: |
            org.opencontainers.image.source=${{ github.server_url }}/${{ github.repository }}
            org.opencontainers.image.revision=${{ github.sha }}
            org.opencontainers.image.created=${{ github.event.head_commit.timestamp }}
          cache-from: type=registry,ref=${{ env.DOCKER_IMAGE }}:buildcache
          cache-to: type=registry,ref=${{ env.DOCKER_IMAGE }}:buildcache,mode=max
      
      - name: Image digest
        run: echo "Image pushed with digest ${{ steps.build.outputs.digest }}"

  # Job 3: Deploy to EC2-1 (Server 1)
  deploy-server-1:
    name: Deploy to EC2 Server 1
    runs-on: ubuntu-latest
    needs: build-and-push
    if: github.event_name == 'push' && (github.ref == 'refs/heads/main' || github.ref == 'refs/heads/master')
    
    steps:
      - name: Checkout deployment scripts
        uses: actions/checkout@v4
        with:
          sparse-checkout: |
            scripts
      
      - name: Configure AWS credentials
        uses: aws-actions/configure-aws-credentials@v4
        with:
          aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
          aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
          aws-region: ${{ secrets.AWS_REGION }}
      
      - name: Setup SSH key
        run: |
          mkdir -p ~/.ssh
          echo "${{ secrets.EC2_SSH_PRIVATE_KEY }}" > ~/.ssh/id_rsa
          chmod 600 ~/.ssh/id_rsa
          ssh-keyscan -H ${{ secrets.EC2_SERVER_1_IP }} >> ~/.ssh/known_hosts
      
      - name: Deploy to Server 1
        run: |
          ssh -i ~/.ssh/id_rsa ${{ secrets.EC2_USER }}@${{ secrets.EC2_SERVER_1_IP }} << 'ENDSSH'
            set -e
            
            # Set environment variables
            export DOCKER_IMAGE="${{ env.DOCKER_IMAGE }}"
            export IMAGE_TAG="latest"
            export CONTAINER_NAME="django-notes-app"
            
            # Navigate to application directory
            cd /opt/django-notes-app || exit 1
            
            # Pull deployment script if not exists
            if [ ! -f scripts/deploy.sh ]; then
              mkdir -p scripts
              curl -o scripts/deploy.sh https://raw.githubusercontent.com/${{ github.repository }}/${{ github.sha }}/scripts/deploy.sh
              chmod +x scripts/deploy.sh
            fi
            
            # Run deployment
            bash scripts/deploy.sh
          ENDSSH
      
      - name: Verify Server 1 health
        run: |
          max_attempts=30
          attempt=0
          
          while [ $attempt -lt $max_attempts ]; do
            if curl -f -s http://${{ secrets.EC2_SERVER_1_IP }}:8000/admin/login/ > /dev/null; then
              echo "‚úÖ Server 1 is healthy"
              exit 0
            fi
            
            attempt=$((attempt + 1))
            echo "Waiting for Server 1 to be healthy (attempt $attempt/$max_attempts)..."
            sleep 10
          done
          
          echo "‚ùå Server 1 health check failed"
          exit 1
      
      - name: Notify Server 1 deployment
        if: always()
        run: |
          if [ "${{ job.status }}" == "success" ]; then
            echo "‚úÖ Server 1 deployment successful"
          else
            echo "‚ùå Server 1 deployment failed"
          fi

  # Job 4: Deploy to EC2-2 (Server 2) - Only after Server 1 succeeds
  deploy-server-2:
    name: Deploy to EC2 Server 2
    runs-on: ubuntu-latest
    needs: [build-and-push, deploy-server-1]
    if: github.event_name == 'push' && (github.ref == 'refs/heads/main' || github.ref == 'refs/heads/master')
    
    steps:
      - name: Checkout deployment scripts
        uses: actions/checkout@v4
        with:
          sparse-checkout: |
            scripts
      
      - name: Configure AWS credentials
        uses: aws-actions/configure-aws-credentials@v4
        with:
          aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
          aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
          aws-region: ${{ secrets.AWS_REGION }}
      
      - name: Setup SSH key
        run: |
          mkdir -p ~/.ssh
          echo "${{ secrets.EC2_SSH_PRIVATE_KEY }}" > ~/.ssh/id_rsa
          chmod 600 ~/.ssh/id_rsa
          ssh-keyscan -H ${{ secrets.EC2_SERVER_2_IP }} >> ~/.ssh/known_hosts
      
      - name: Deploy to Server 2
        run: |
          ssh -i ~/.ssh/id_rsa ${{ secrets.EC2_USER }}@${{ secrets.EC2_SERVER_2_IP }} << 'ENDSSH'
            set -e
            
            # Set environment variables
            export DOCKER_IMAGE="${{ env.DOCKER_IMAGE }}"
            export IMAGE_TAG="latest"
            export CONTAINER_NAME="django-notes-app"
            
            # Navigate to application directory
            cd /opt/django-notes-app || exit 1
            
            # Pull deployment script if not exists
            if [ ! -f scripts/deploy.sh ]; then
              mkdir -p scripts
              curl -o scripts/deploy.sh https://raw.githubusercontent.com/${{ github.repository }}/${{ github.sha }}/scripts/deploy.sh
              chmod +x scripts/deploy.sh
            fi
            
            # Run deployment
            bash scripts/deploy.sh
          ENDSSH
      
      - name: Verify Server 2 health
        run: |
          max_attempts=30
          attempt=0
          
          while [ $attempt -lt $max_attempts ]; do
            if curl -f -s http://${{ secrets.EC2_SERVER_2_IP }}:8000/admin/login/ > /dev/null; then
              echo "‚úÖ Server 2 is healthy"
              exit 0
            fi
            
            attempt=$((attempt + 1))
            echo "Waiting for Server 2 to be healthy (attempt $attempt/$max_attempts)..."
            sleep 10
          done
          
          echo "‚ùå Server 2 health check failed"
          exit 1
      
      - name: Notify Server 2 deployment
        if: always()
        run: |
          if [ "${{ job.status }}" == "success" ]; then
            echo "‚úÖ Server 2 deployment successful"
          else
            echo "‚ùå Server 2 deployment failed"
          fi

  # Job 5: Post-Deployment Verification
  post-deployment:
    name: Post-Deployment Verification
    runs-on: ubuntu-latest
    needs: [deploy-server-1, deploy-server-2]
    if: always()
    
    steps:
      - name: Check ALB health
        run: |
          if [ -n "${{ secrets.ALB_ENDPOINT }}" ]; then
            echo "Checking ALB endpoint: ${{ secrets.ALB_ENDPOINT }}"
            
            max_attempts=10
            attempt=0
            
            while [ $attempt -lt $max_attempts ]; do
              if curl -f -s ${{ secrets.ALB_ENDPOINT }}/admin/login/ > /dev/null; then
                echo "‚úÖ ALB is healthy and routing traffic"
                exit 0
              fi
              
              attempt=$((attempt + 1))
              echo "Waiting for ALB to be healthy (attempt $attempt/$max_attempts)..."
              sleep 5
            done
            
            echo "‚ö†Ô∏è  ALB health check inconclusive"
          else
            echo "‚ÑπÔ∏è  ALB endpoint not configured, skipping check"
          fi
      
      - name: Deployment summary
        run: |
          echo "=========================================="
          echo "Deployment Summary"
          echo "=========================================="
          echo "Repository: ${{ github.repository }}"
          echo "Branch: ${{ github.ref_name }}"
          echo "Commit: ${{ github.sha }}"
          echo "Author: ${{ github.actor }}"
          echo "Build Number: ${{ github.run_number }}"
          echo "Workflow: ${{ github.workflow }}"
          echo "=========================================="
          echo "Server 1: ${{ needs.deploy-server-1.result }}"
          echo "Server 2: ${{ needs.deploy-server-2.result }}"
          echo "=========================================="
      
      - name: Send Slack notification
        if: always()
        uses: slackapi/slack-github-action@v1
        with:
          webhook-url: ${{ secrets.SLACK_WEBHOOK_URL }}
          webhook-type: incoming-webhook
          payload: |
            {
              "text": "Deployment Status: ${{ job.status }}",
              "blocks": [
                {
                  "type": "header",
                  "text": {
                    "type": "plain_text",
                    "text": "üöÄ Django Notes App Deployment"
                  }
                },
                {
                  "type": "section",
                  "fields": [
                    {
                      "type": "mrkdwn",
                      "text": "*Status:*\n${{ job.status }}"
                    },
                    {
                      "type": "mrkdwn",
                      "text": "*Branch:*\n${{ github.ref_name }}"
                    },
                    {
                      "type": "mrkdwn",
                      "text": "*Commit:*\n${{ github.sha }}"
                    },
                    {
                      "type": "mrkdwn",
                      "text": "*Author:*\n${{ github.actor }}"
                    }
                  ]
                },
                {
                  "type": "section",
                  "text": {
                    "type": "mrkdwn",
                    "text": "Server 1: ${{ needs.deploy-server-1.result }}\nServer 2: ${{ needs.deploy-server-2.result }}"
                  }
                }
              ]
            }
        continue-on-error: true
